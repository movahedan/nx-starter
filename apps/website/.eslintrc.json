{
  "extends": [
    "../../.eslintrc.json",
    "next",
    "next/core-web-vitals",
    "../../.es.react.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.{ts,tsx,js,jsx}"],
      "rules": {
        "jsx-a11y/anchor-is-valid": "off",
        "@next/next/no-html-link-for-pages": ["error", "apps/website/pages"]
      }
    },
    {
      "files": ["./pages/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
